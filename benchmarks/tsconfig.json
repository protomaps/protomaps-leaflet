{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "isolatedModules": true,
    "jsx": "react",
    "module": "ES6",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES6",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "outDir": "dist",
    "declarationDir": "types",
    "declarationMap": true,
    "paths": {
      "protomaps-local": ["../dist/protomaps.js"]
    }
  },
  "include": ["benchs/**/*.ts"],
  "exclude": ["node_modules"]
}
